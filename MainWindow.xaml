<Window x:Class="roshTimerTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:roshTimerTest"
        mc:Ignorable="d"
        Title="Roshan Timer" Height="150" Width="150"
        ResizeMode="NoResize"
        Icon="/Assets/icon.ico">
    <Grid>
        <Button Content="Convert" Width="80" Height="20" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Button_Click" Margin="0,30,0,0" IsDefault="True"/>
        <Button Content="Copy" Width="80" Height="20" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="OnCopyToClipboardClick" Margin="0,0,0,5" />
        <TextBox x:Name="MyTextBox" Width="80" Height="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0" />
        <Label x:Name="ConvertedTimeLabel"  Content="Result" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,30" />
    </Grid>
</Window>
